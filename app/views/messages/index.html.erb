<div class="panel panel-default">
    <div class="panel-heading">
        <h1>メッセージ一覧</h1>
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
          <span class="label label-info"><%= message.name %></span>
          <%= message.body %>
          <br>
        <% end %>
    </div>
</div>

<div class="form-horizontal" role="form">
<%= form_for(Message.new) do |f| %>
    <div class="form-group">
        <label class="col-sm-2">名前</label>
        <div class="col-sm-12">
        <%= f.text_area :name, :class => "form-control", :rows => "1" %>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2">内容</label>
        <div class="col-sm-12">
        <%= f.text_area :body, :class => "form-control", :rows => "3" %>
        </div>
    </div>
    <%= f.submit "送信", :class => "btn btn-primary btn-lg btn-block center-block" %>
<% end %>
</div>
